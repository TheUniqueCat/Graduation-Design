<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:frogcare="http://schemas.android.com/apk/res/com.bingoogol.frogcare"
    style="@style/match_match"
    android:orientation="vertical" >

    <TextView
        style="@style/title_top"
        android:text="@string/setting_center" />

    <ScrollView
        style="@style/match_match"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/match_match"
            android:orientation="vertical" >

            <com.bingoogol.frogcare.ui.view.SettingView_
                style="@style/match_wrap"
                frogcare:content_off="@string/auto_update_closed"
                frogcare:content_on="@string/auto_update_opened"
                frogcare:title="@string/auto_update" />

            <com.bingoogol.frogcare.ui.view.SettingView_
                style="@style/match_wrap"
                frogcare:content_off="@string/app_lock_closed"
                frogcare:content_on="@string/app_lock_opened"
                frogcare:title="@string/app_lock" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>